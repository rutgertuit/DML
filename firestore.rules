rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to write to feedback collection (for temporary testing)
    // TODO: Remove or tighten these rules after testing phase
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
